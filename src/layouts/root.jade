		meta(property="og:type", content="article")
		meta(property="og:url", content="http://verstat.info/")
		meta(property="og:image", content="http://verstat.info/assets/i/verstat-og-image.jpg")
		meta(property="og:locale", content="en_US")

		link(href=asset("i/favicon.png"), rel="shortcut icon", type="image/x-icon")
